{
  "manifest_version": 2,
  "name": "Timely",
  "description": "Click and track price on Flipkart/Amazon and get notification of changes",
  "version": "0.1",
  "options_ui": {
    "chrome_style": true,
    "open_in_tab": true
  },
  "background": {
  },
  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "activeTab",
    "alarms",
    "notifications",
    "windows",
    "http://*/",
    "https://*/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval';  object-src 'self'"
}